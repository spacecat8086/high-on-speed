    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc.exe debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\Debug\\HighOnSpeed.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\Debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc.exe build(debug)"
        }
    ]
}